@model IEnumerable<Channel365.Models.VideoModel>

    <div id="coverflow" class="d-none d-md-flex justify-content-center">
        <ul class="flip-items">
           
            @foreach (var movie in Model)
            {
                <li data-flip-title="@movie.VideoTitle">
                    <div class="carusel-display">
                        <img class="carusel-img" src="@movie.VideoImage" width="500"><br />
                        <div class="vid-info">
                            <h2>@movie.VideoTitle</h2>
                            <small>@movie.LikesAndDislikes.Count() Likes</small>
                        </div>
                    </div>
                    <a asp-controller="Video" asp-action="Video" asp-route-id="@movie.VideoId" class="watch-btn btn btn-secondary btn-block">Watch</a>
                </li>
            }
        </ul>
    </div>

<style>
    #coverflow {
        opacity: 0;
        min-height: 416.18px;
        transition: 1.5s ease-out;
    }

    .carusel-display {
        position: relative;
        text-align: center;
    }
        .carusel-display:hover .carusel-img {
            filter: blur(2px);
        }
        .carusel-display:hover .vid-info {
            opacity: 1
        }

    .carusel-img,
    .vid-info {
        transition: 0.3s all;
    }

    .carusel-img {
        max-height: 333.33px;
        border-radius: 3px 3px 0 0;
    }

    .vid-info {
        text-align: center;
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        width: 100%;
        padding-top: 20%;
        opacity: 0;
        text-shadow: 1px 1px 1px rgba(10, 10, 10, 1);
    }

    .watch-btn {
        border-top: none;
        border-radius: 0 0 3px 3px;
    }
</style>