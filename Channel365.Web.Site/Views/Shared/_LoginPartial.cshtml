@using Microsoft.AspNetCore.Identity
@using Channel365.Data.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><b>@User.Identity.Name</b></a>
            </li>

            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="btn btn-outline-light" asp-area="Identity" asp-page="/Account/Logout">
                        <img src="~/pic/exit.png" width="30" height="30">
                    </button>
                </form>
            </li>

        }
        else
        {

            <li class="nav-item">
                <a type="button" class="btn btn-outline-light" asp-area="Identity" asp-page="/Account/Login">
                    <svg class="bi bi-person-fill" color="gray" width="2em" height="2em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                    </svg> Login
                </a>
            </li>
        }
    </ul>