@model Channel365.Data.Entities.ApplicationUser
@{
    ViewData["Title"] = Model.UserName + "'s Playlists";
}

 @* This page will be replaced by Playlist/Playlists *@

    <div class="channel-container">

        <partial name="_ChannelNav" model="@Model" />

        @if (Model.UserPlaylist.Count == 0)
        {
            <h1 id="empty">No created playlists...</h1>
        }
        else
        {
            <div class="row">
                @foreach (var playlist in Model.UserPlaylist)
                {
                    <div class="col-lg-4 col-md-6 col-sm-8">
                        <div class="card flex-md-row mb-4 box-shadow h-md-250">
                            <div class="card-body d-flex flex-column align-items-start">
                                <a asp-controller="Channel" asp-action="Index" asp-route-id="@Model.Id"><strong class="d-inline-block mb-2 text-primary">@Model.UserName</strong></a>
                                <h3 class="mb-0">
                                    <a class="text-dark" href="#">@playlist.PlaylistName</a>
                                </h3>
                                <div class="mb-1 text-muted">Contains @playlist.VideosInPlaylists.Count() videos.</div>
                                <p class="card-text mb-auto">@playlist.PlaylistDesc</p>
                                <a class="btn btn-primary" asp-controller="" asp-action="" asp-route-data="">View Playlist</a>
                            </div>
                            <div class="playlist-img d-none d-md-block">
                                <img class="card-img-right flex-auto d-none d-md-block" src="@playlist.VideosInPlaylists[0].Video.VideoImage" alt="Playlist thumbnail" data-holder-rendered="true">
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

    </div>

<style>
    #empty {
        color: #ffcd70;
    }
    .card-text{
        color: dimgrey;
    }

    .playlist-img{
        width: 200px;
        height: 250px;
    }
    .card-img-right {
        width: 100%;
        height: 100%;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.playlist-nav').addClass('active');
        });
    </script>
}