@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

    <div class="text-center">


        <h1 class="h3 navbar-brand my-5 font-weight-normal" style="color:orange">Please sign in</h1>
        <div class="row justify-content-center">
            <div class="col-4">
                <form method="post">
                    <input asp-for="Input.Username" class="form-control" placeholder="Username">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password">

                    <div class="checkbox my-3">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe">@Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

                    <div asp-validation-summary="All" class="text-danger"></div>
                </form>
            </div>
        </div>

        <div class="form-group">
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </p>
        </div>

        @*<p class="mt-5 mb-3 text-muted">© 2020</p>*@

    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}